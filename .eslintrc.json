{
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "flowtype",
        "react",
        "jest"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "jsx-a11y/label-has-for": [ 2, {
            "required": { "some": ["nesting", "id"] }
        }]
    }
}